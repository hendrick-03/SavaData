<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="33dp"
        android:text="Formulario Registro"
        android:textSize="33dp" />

    <EditText
        android:id="@+id/nome_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/nome_ed"
        android:layout_margin="33sp"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/data_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="33sp"
        android:hint="@string/data"
        android:ems="10"
        android:inputType="date" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_margin="33sp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pass_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/pass_ed"
        android:layout_margin="33sp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/gravar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="33sp"
        android:onClick="saveData"
        android:text="Save" />

    <TextView
        android:id="@+id/entra_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="logar"
        android:text="Ja Possui uma conta, Entrar!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>